[gpg]
	program = gpg2
[color]
	ui = true
[transfer]
	fsckObjects = true
[receive]
	fsckObjects = false
[fetch]
	fsckObjects = false
	ui = true
	parallel = 0
[commit]
	template = /home/czocher/.gitmessage
	gpgsign = true
[tag]
	gpgsign = true
[pull]
	ff = only
