[core]
	editor = nvim
[push]
	default = simple
[difftool "kdiff3"]
	trustExitCode = false
[difftool]
	prompt = false
[diff]
	tool = kdiff3
[mergetool "kdiff3"]
	trustExitCode = false
[mergetool]
	keepBackup = false
[merge]
	tool = kdiff3
	ff = only
[alias]
	cleanup = !git branch --merged master | grep -v master | xargs -n 1 git branch -d
	ignore = !git update-index --assume-unchanged
	deignore = !git update-index --no-assume-unchanged
	ignored = !git ls-files -v | grep "^[[:lower:]]"
	wat = log --graph --decorate --oneline -15
[user]
	name = Paweł Jan Czochański
	signingkey = 82843164B26A29FB
[gpg]
	program = gpg2
[color]
	ui = true
